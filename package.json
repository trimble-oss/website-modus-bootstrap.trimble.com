{
  "name": "modus-bootstrap-guide",
  "version": "1.0.0",
  "private": true,
  "description": "static website built with Hugo",
  "homepage": "https://modus-bootstrap.trimble.com",
  "bugs": {
    "url": "https://jira.trimble.tools/projects/ETHER/issues/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/trimble-oss/website-modus-bootstrap.trimble.com.git"
  },
  "license": "private",
  "author": "Trimble",
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "build": "npm-run-all lint-css && npx hugo && npm run lint-html",
    "build-dev": "npm-run-all lint-css && npx hugo --config config.yml,config-dev.yml && npm run lint-html",
    "lint-css": "stylelint \"assets/css/*.scss\"",
    "lint-html": "htmlhint \"build/**/index.html\"",
    "lint-js": "eslint \"assets/js/*.js\" \"layouts/**/*.html\"",
    "lint-links": "npx linkinator build --recurse --silent --skip github.com",
    "lint-markdown": "npx markdownlint-cli content/**/*.md",
    "lint-spellcheck": "npx cspell \"content/**/*.md\" --no-progress",
    "prettier": "prettier --write \"assets/css/*.*\"",
    "serve": "npm run lint-js && hugo serve --port 5000 --disableFastRender --navigateToChanged",
    "svgo": "npx svgo --folder=\"static/img/headers\"",
    "test": "npm-run-all lint-css lint-js lint-markdown lint-html lint-links"
  },
  "devDependencies": {
    "@trimbleinc/modus-bootstrap": "^1.4.0",
    "autoprefixer": "^10.4.4",
    "eslint": "^8.12.0",
    "eslint-plugin-html": "^6.2.0",
    "htmlhint": "^1.1.3",
    "hugo-bin": "^0.84.0",
    "list.js": "^2.3.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.12",
    "postcss-cli": "9.1.0",
    "prettier": "^2.6.1",
    "stylelint": "14.6.1",
    "stylelint-config-prettier": "9.0.3",
    "stylelint-config-standard-scss": "3.0.0"
  },
  "hugo-bin": {
    "buildTags": "extended"
  }
}
