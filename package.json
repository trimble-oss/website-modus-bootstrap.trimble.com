{
  "name": "modus-bootstrap-guide",
  "version": "1.0.0",
  "private": true,
  "description": "static website built with Hugo",
  "homepage": "https://modus-bootstrap.trimble.com",
  "bugs": {
    "url": "https://jira.trimble.tools/projects/ETHER/issues/"
  },
  "repository": {
    "type": "git",
    "url": "ssh://git@bitbucket.trimble.tools/tmds/modus-bootstrap-guide.git"
  },
  "license": "private",
  "author": "Trimble",
  "scripts": {
    "build": "npm-run-all lint-css && npx hugo && npm run lint-html",
    "build-dev": "npm-run-all lint-css && npx hugo --config config.yml,config-dev.yml && npm run lint-html",
    "deploy": "cross-env s3-deploy './build/**/*.{css,html,ico,jpg,js,json,webmanifest,map,png,svg,xml}' --cwd './build/' --region us-east-1 --bucket modus-bootstrap.trimble.com --cache 31557600 --invalidate",
    "deploy:dev": "cross-env s3-deploy './build/**/*.{css,html,ico,jpg,js,json,webmanifest,map,png,svg,xml}' --cwd './build/' --region us-east-1 --bucket bootstrap-dev.trimblemaps.com --cache 0 --invalidate",
    "lint-css": "stylelint \"assets/css/*.scss\"",
    "lint-html": "htmlhint \"build/**/index.html\"",
    "lint-js": "eslint \"assets/js/*.js\" \"layouts/**/*.html\"",
    "lint-links": "npx linkinator build --recurse --silent --skip github.com",
    "lint-markdown": "npx markdownlint-cli content/**/*.md",
    "lint-spellcheck": "npx cspell \"content/**/*.md\"",
    "prettier": "prettier --write \"assets/css/*.*\"",
    "serve": "npm run lint-js && hugo serve --port 5000 --disableFastRender",
    "svgo": "npx svgo --folder=\"static/img/headers\"",
    "test": "npm-run-all lint-css lint-js lint-markdown lint-html lint-links"
  },
  "devDependencies": {
    "@trimbleinc/modus-bootstrap": "^1.3.0",
    "autoprefixer": "^10.4.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.2.0",
    "eslint-plugin-html": "^6.2.0",
    "htmlhint": "^0.16.0",
    "hugo-bin": "^0.77.2",
    "list.js": "^2.3.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.3.11",
    "postcss-cli": "9.0.2",
    "prettier": "^2.4.1",
    "s3-deploy": "^1.4.0",
    "stylelint": "13.13.1",
    "stylelint-config-prettier": "9.0.3",
    "stylelint-config-standard": "22.0.0"
  },
  "hugo-bin": {
    "buildTags": "extended"
  }
}
